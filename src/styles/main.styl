@import 'prism/themes/prism-okaidia.css'
// Check out "bower_components/prism/themes/" for available themes

color-primary = rgb(248, 248, 242)
color-secondary = rgb(166, 226, 46)
color-ternary = rgb(102, 217, 239)

bg-color = rgb(39, 40, 34)

/* Regular */
@font-face
    font-family 'League Gothic'
    src url('../fonts/leaguegothic-regular-webfont.eot')
    src url('../fonts/leaguegothic-regular-webfont.eot?#iefix') format('embedded-opentype'),
        url('../fonts/leaguegothic-regular-webfont.woff') format('woff'),
        url('../fonts/leaguegothic-regular-webfont.ttf') format('truetype'),
        url('../fonts/leaguegothic-regular-webfont.svg#league_gothicregular') format('svg')
    font-weight normal
    font-style normal

body
  font-family 'League Gothic', Impact, sans-serif;
  color color-primary
  text-shadow 0px 0px 6px rgba(0,0,0,0.2)

a
  color color-ternary

.bespoke-parent
  background radial-gradient(circle, #555a5f, #1c1e20)
  background-color #282a2d
  
  & h1 
    font-size 3.77em
    letter-spacing 0.02em
    text-shadow 0 1px 0 #ccc, 0 2px 0 #c9c9c9, 0 3px 0 #bbb, 0 4px 0 #b9b9b9, 0 5px 0 #aaa, 0 6px 1px rgba(0,0,0,0.1), 0 0 5px rgba(0,0,0,0.1), 0 1px 3px rgba(0,0,0,0.3), 0 3px 5px rgba(0,0,0,0.2), 0 5px 10px rgba(0,0,0,0.25), 0 20px 20px rgba(0,0,0,0.15)
    text-transform uppercase

  & h2
    font-size 2.55em
    letter-spacing 0.02em
    text-transform uppercase
    color color-secondary

    & span
      font-size .5em
      text-transform lowercase
      color color-primary

  & h3
    font-size 1.33em
    letter-spacing 0.02em
    color color-primary
    margin-bottom 8px

  & h4
    letter-spacing 0.22em

.bespoke-slide
  background-color transparent

.bespoke-theme-cube-slide-parent
  z-index 2

.bespoke-backdrop
  z-index 1

.tasty
  &__intro
    background-image url('../images/tasty_intro.jpg')
    background-position center;
    
  &__end
    background-image url('../images/tasty_end.jpg')
    background-position center;

.font
  &__color
    &--secondary
      color color-secondary !important

.the_end
  background-image url('http://bigmouthbarry.com/wp-content/uploads/2015/04/all.jpg')
  background-position center;

.block
  margin .5em
  border-radius 0.3em
  background-color bg-color
  padding 1em
  
  img
    max-width 100%

.quote
  text-align left

  p
    margin 0
  
  strong
    color color-secondary
    font-weight normal

.code
  &--medium
    font-size 14px
